<%= render 'layouts/com_nav' %>

<div class="container">
    <div class="row">
        <div>
            <h1>Create a Project Proposal</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            <%= form_for @project do |f| %>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Project Title:</label>
                    <%= f.text_field :title, class: "form-control col-sm-10", :required => true %>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Description:</label>
                    <%= f.text_area :description, class: "form-control col-sm-10", :required => true %>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Category:</label>
                    <%= f.text_field :category, class: "form-control col-sm-10", :required => true %>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Timeframe:</label>
                    <%= f.text_field :timeframe, class: "form-control col-sm-10", :required => true %>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Attachments:</label>
                    <%= f.file_field :file, class: "col-sm-10", :required => true %>
                </div>
                <%= f.submit class: "btn btn-success" %>
            <% end %>
        </div>
    </div>
</div>